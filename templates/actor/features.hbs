          <div class='resource-content flexrow flex-center flex-between'>
            <input class="align-center" type='text' name='system.speed.boostedSpeed'
              value='{{system.speed.boostedSpeed}}' data-dtype='Number' readonly="true" />
          </div>
        </div>
      </div>

      <hr>
      {{! Div for Saving Throws}}
      <div class='resources grid grid-4col'>
        {{#each system.savingThrows as |savingThrow key|}}
        <div class='resource flex-group-center'>
          <label class='resource-label' data-label='{{localize (lookup @root.config.savingThrows key)}}'>{{localize
            (lookup @root.config.savingThrows
            key)}}</label>
          <input class="align-center" type='text' name='system.savingThrows.{{key}}' value='{{savingThrow}}'
            data-dtype='Number' readonly="true" />
        </div>
        {{/each}}
      </div>

    </section>
  </section>
</section>