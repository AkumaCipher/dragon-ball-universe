{{! Attributes Tab }}
<section class='tab attributes scrollable {{tab.cssClass}}' data-group='primary' data-tab='attributes'>
  <section class='grid grid-3col'>
    <aside class='sidebar'>
      {{! The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns. }}
      <div class='abilities flexcol'>
        {{#each system.abilities as |ability key|}}
        <div class='ability flexrow flex-group-center'>
          <label class='resource-label rollable flexlarge align-left' data-action='roll'
            data-roll='d10+@abilities.{{key}}.value'
            data-label='{{localize (lookup @root.config.abilities key)}} Score'>{{localize (lookup @root.config.abilities
            key)}}</label>
          <input class="align-center" type='text' name='system.abilities.{{key}}.value' value='{{ability.value}}'
            class="ability-score" data-dtype='Number' />
          <span class='ability-mod rollable' data-action='roll' data-roll='d10+@abilities.{{key}}.mod'
            data-label='{{localize (lookup @root.config.abilities key)}} Modifier'>{{numberFormat ability.mod decimals=0
            sign=true}}</span>
        </div>
        {{/each}}
      </div>
    </aside>

    {{! For the main attributes list, span the right two columns }}
    <section class='main grid-span-2'>
      <div class='resources grid grid-4col'>
        <div class='resource flex-group-center'>
          <label for='system.health.value' class='resource-label'>
            {{localize 'DRAGON_BALL_UNIVERSE.Actor.base.FIELDS.combatRolls.strike.label'}}
          </label>

          <div class='resource-content flexrow flex-center flex-between' style="padding-top: 8%;">
            <span>
              {{system.combatRolls.strike.value}}
            </span>
          </div>

        </div>

        <div class='resource flex-group-center'>
          <label for='system.combatRolls.dodge' class='resource-label'>
            {{localize 'DRAGON_BALL_UNIVERSE.Actor.base.FIELDS.combatRolls.dodge.label'}}
